@{
    var listFile = (IEnumerable<Shop.Common.DTO.FileDTO>)ViewData["ListFile"];
    var listCart = (IEnumerable<Shop.Mvc.Models.CartItem>)ViewData["ListCart"];
    long total = (long)ViewBag.Total;
}


<!--  offcanvas Minicart Start -->
<div class="offcanvas-minicart_wrapper" id="miniCart">
    <div class="offcanvas-menu-inner">
        <div class="close-btn-box">
            <a class="btn-close"><i class="icon-cross2"></i></a>
        </div>
        <div class="minicart-content">
            @if (listCart != null)
            {
                <ul class="minicart-list">
                    @foreach (var item in listCart)
                    {
                        <li class="minicart-product _clickMenu _item-@item.Product.ID" data-id="@item.Product.ID">
                            <a class="product-item_remove"><i class="icon-cross2 _clickDelete"></i></a>
                            <a class="product-item_img">
                                @foreach (var child in listFile)
                                {
                                    if (item.Product.ID == child.IDProduct)
                                    {
                                        <img class="img-fluid img-pic-small-product" src="/uploadFiles/@child.FileContent" alt="Product Image">
                                        break;
                                    }
                                }
                            </a>
                            <div class="product-item_content">
                                <a class="product-item_title" href="/Product/@item.Product.ID">@item.Product.Name</a>
                                <label>Số lượng : <span>@item.Amount</span></label>
                                <label class="product-item_quantity">Tổng: <span class="_totalMoney"> @item.TotalMoney.ToString("N0") VND</span></label>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <span>Chưa có sản phẩm nào được thêm vào giỏ hàng</span>
            }
        </div>
        <div class="minicart-item_total">
            <span class="font-weight--reguler">Tổng cộng:</span>
            <span class="ammount font-weight--reguler">@total.ToString("N0") VND</span>
        </div>
        @if (listCart != null)
        {
            <div class="minicart-btn_area">
                <a href="/Cart" class="btn btn--full btn--border_1">Xem giỏ hàng</a>
            </div>
            <div class="minicart-btn_area">
                <a href="/Checkout" class="btn btn--full btn--black">Thanh toán</a>
            </div>
        }
    </div>
    <div class="global-overlay"></div>
</div>
<!--  offcanvas Minicart End -->
