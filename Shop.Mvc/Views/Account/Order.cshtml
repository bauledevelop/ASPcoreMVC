@model IEnumerable<Shop.Common.DTO.OrderDTO>
@{
    ViewData["Title"] = "Hóa đơn của bạn";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}


@await Component.InvokeAsync("Title")
<div id="main-wrapper">
    <div class="site-wrapper-reveal border-bottom">
        <div class="my-account-page-warpper section-space--ptb_120">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="myaccount-page-wrapper">
                            <div class="row">
                                @await Component.InvokeAsync("MenuAccount")
                                <div class="col-lg-9 col-md-8">
                                    <div class="tab-content">
                                        <div class="tab-pane fade show active">
                                            <div class="myaccount-content">
                                                <h3 class="title">@ViewBag.Title</h3>
                                                @if(Model.Count() > 0)
                                                {
                                                    <table class="table table-bordered">
                                                        <thead class="thead-light">
                                                            <tr>
                                                                <th>Mã đơn hàng</th>
                                                                <th>Ngày tạo</th>
                                                                <th>Số lượng</th>
                                                                <th>Tổng tiền</th>
                                                                <th>Trạng thái hóa đơn</th>
                                                                <th>Hành động</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach(var item in Model)
                                                            {
                                                                <tr>
                                                                    <td class="txt-order-account"> @item.ID</td>
                                                                    <td class="txt-order-account">@item.CreatedDate</td>
                                                                    <td class="txt-order-account">@item.Quantity</td>
                                                                    <td class="txt-order-account">@item.Total.ToString("N0") VND</td>
                                                                    <td class="txt-order-account">@(item.Status == true ? "Đã giao hàng" : "Chưa giao hàng")</td>
                                                                    <td><a href="/Account/OrderDetail/@item.ID" class="btn btn-outline-primary">Xem chi tiết</a></td>
                                                                </tr>
                                                            }
                                                            
                                                        </tbody>
                                                    </table>
                                                }
                                                else
                                                {
                                                    <h3 style="text-align:center;">Bạn hiện tại chưa có đơn hàng nào</h3>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @await Component.InvokeAsync("Footer")
</div>



