@model Shop.Mvc.Models.ResetPassword
@{
    ViewData["Title"] = "Thay đổi mật khẩu";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@await Component.InvokeAsync("Title")
<div id="main-wrapper">
    <div class="site-wrapper-reveal border-bottom">
        <div class="my-account-page-warpper section-space--ptb_120">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="myaccount-page-wrapper">
                            <div class="row">
                                @await Component.InvokeAsync("MenuAccount")
                                <div class="col-lg-9 col-md-8">
                                    <div class="tab-content">
                                        <div class="tab-pane fade show active">
                                            <div class="myaccount-content">
                                                <h3 class="title">@ViewBag.Title</h3>
                                                <div class="account-details-form">
                                                    <form asp-action="ChangePassword" asp-controller="Account" method="post">
                                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                        @if (ViewBag.Message != null)
                                                        {
                                                            <div class="alert alert-danger">@ViewBag.Message</div>
                                                        }
                                                        @if(ViewBag.Success != null)
                                                        {
                                                            <div class="alert alert-success">@ViewBag.Success</div>

                                                        }
                                                        <div class="row">
                                                            <div class="single-input-item">
                                                                <label asp-for="CurrentPassword" class="required mb-1"></label>
                                                                <input asp-for="CurrentPassword" />
                                                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                                            </div>
                                                            <div class="single-input-item">
                                                                <label asp-for="Password" class="required mb-1"></label>
                                                                <input asp-for="Password" />
                                                                <span asp-validation-for="Password" class="text-danger"></span>
                                                            </div>
                                                            <div class="single-input-item">
                                                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                                                <input asp-for="ConfirmPassword" />
                                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                            </div>
                                                            <div class="form-group mt-2">
                                                                <input type="submit" value="Thay đổi mật khẩu" class="btn btn-success" />
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    @await Component.InvokeAsync("Footer")
</div>


