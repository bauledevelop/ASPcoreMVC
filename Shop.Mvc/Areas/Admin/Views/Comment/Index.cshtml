@model IEnumerable<Shop.Mvc.Areas.Admin.Models.CommentViewModel>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
    var paginations = (IPagedList)ViewData["Pagination"];
    var listAccount = (IEnumerable<Shop.Mvc.Areas.Admin.Models.AccountViewModel>)ViewData["ListAccount"];
}
@section js{
    <script src="~/../Areas/Admin/assets/js/Comment.js"></script>
}
<div class="container-fluid">
    <!-- DataTales Example -->
    @if (Model != null)
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách nhân sự</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Nội dung</th>
                                <th>Ngày tạo</th>
                                <th>Công cụ</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Tài khoản</th>
                                <th>Nội dung</th>
                                <th>Ngày tạo</th>
                                <th>Công cụ</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var tick = "fa-solid fa-check color-tick";
                                var xmask = "fa-solid fa-xmark color-xmask";
                            <tr class="item-@item.ID">
                                @foreach (var child in listAccount)
                                {
                                    if (item.IDAccount == child.ID)
                                    {
                                        <td>@child.Username</td>
                                        break;
                                    }
                                }
                                <td>
                                    @item.Content
                                </td>
                                <td>@item.CreatedDate</td>
                                <td>
                                    <span class="_deleteComment" data-bs-toggle="modal" data-bs-target="#deleteComment" data-id="@item.ID" style="cursor: pointer; margin-right: 2px"><i class="fa-solid fa-trash color-trash"></i></span>
                                    <i class="@(item.Status == true ? tick : xmask) _EditStatus"></i>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="row mt-4" style="justify-content: space-between;">
                    <div class="col-sm-12 col-md-5">
                        <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite">Show @paginations.FirstItemOnPage to @paginations.PageNumber total @paginations.PageCount entities</div>
                    </div>
                    <div class="col-md-4">
                        <div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
                            @if (paginations != null)
                            {
                                @Html.PagedListPager(paginations, page => Url.Action("Comment","Admin",new {page=page}),new PagedListRenderOptions{
                        DisplayLinkToIndividualPages = true,
                        DisplayPageCountAndCurrentLocation = false,
                        MaximumPageNumbersToDisplay  = 5,
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" },

                        })
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="deleteComment" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc là muốn xóa nhân viên này?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Quay lại</button>
                <button type="button" class="btn btn-primary btn-submit">Đồng ý</button>
            </div>
        </div>
    </div>
</div>