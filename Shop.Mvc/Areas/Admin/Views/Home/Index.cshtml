@{
    ViewData["Title"] = "Trang Admin";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}
<!-- Content -->
<div class="row">
    <div class="col-lg-4 col-md-4 order-1">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <img src="/Areas/Admin/assets/dist/img/icons/unicons/chart-success.png"
                                     alt="chart success"
                                     class="rounded" />
                            </div>
                        </div>
                        <span class="fw-semibold d-block mb-1">Tổng doanh thu</span>
                        <h3 class="card-title mb-2">@ViewBag.Revenue.ToString("N0")</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <span class="avatar-initial rounded bg-label-info"><i class="bx bx-home-alt"></i></span>
                            </div>
                        </div>
                        <span class="fw-semibold d-block mb-1">Tổng người dùng</span>
                        <h3 class="card-title text-nowrap mb-1">@ViewBag.Account</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <img src="/Areas/Admin/assets/dist/img/icons/unicons/cc-primary.png"
                                     alt="Credit Card"
                                     class="rounded" />
                            </div>
                        </div>
                        <span class="fw-semibold d-block mb-1">Số hóa đơn</span>
                        <h3 class="card-title text-nowrap mb-2">@ViewBag.Order</h3>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex align-items-start justify-content-between">
                            <div class="avatar flex-shrink-0">
                                <span class="avatar-initial rounded bg-label-success">
                                <i class="bx bx-closet"></i>
                                </span>
                            </div>
                        </div>
                        <span class="fw-semibold d-block mb-1">Số sản phẩm</span>
                        <h3 class="card-title text-nowrap mb-2">@ViewBag.Product</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Revenue -->
    <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
        <div class="card">
            <div class="row row-bordered g-0">
                <div class="col-md-8">
                    <h5 class="card-header m-0 me-2 pb-3">Tổng doanh thu</h5>
                    <div id="totalRevenueChart" class="px-2"></div>
                </div>
                <div class="col-md-4">
                    <div class="card-body">
                    </div>
                    <div id="growthChart"></div>
                    <div class="text-center fw-semibold pt-3 mb-2">Thống kê đơn hàng đã giao</div>

                </div>
            </div>
        </div>
    </div>
    <!--/ Total Revenue -->
