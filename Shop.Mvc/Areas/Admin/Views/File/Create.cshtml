@model Shop.Mvc.Areas.Admin.Models.FileViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
    var listCategory = (SelectList)ViewData["TypeCategory"];
    var listFile = (SelectList)ViewData["TypeFile"];
}
@section js{
    <script src="~/../Areas/Admin/assets/js/CreateFile.js"></script>
}
<div class="container">
    <div class="card card__pd">
    <div class="col-md-12">
        @using (Html.BeginForm("", "", FormMethod.Post, new { action = "/Admin/File/Create" ,@enctype="multipart/form-data"}))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h4>Tạo dữ liệu</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }
                <div class="form-group">
                @Html.LabelFor(model => model.IDCategory, htmlAttributes: new { @class = "control-label" })
                <div class="">
                            @Html.DropDownListFor(model => model.IDCategory, listCategory, htmlAttributes: new { @class = "form-control w-25" })
                    @Html.ValidationMessageFor(model => model.IDCategory, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IDProduct, htmlAttributes: new { @class = "control-label" })
                <div class="">
                            @Html.DropDownListFor(model => model.IDProduct, new SelectList(new string[]{}), htmlAttributes: new { @class = "form-control w-25" })
                    @Html.ValidationMessageFor(model => model.IDProduct, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label" })
                <div class="">
                            @Html.DropDownListFor(model => model.Type, listFile, htmlAttributes: new { @class = "form-control w-25" })
                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input name="uploadFiles" type="file"  multiple />
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label " })
                <div>
                    @Html.CheckBoxFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2">
                    <input type="submit" value="Thay đổi" class="btn btn-success" />
                </div>
            </div>
        </div>
        }
    </div>
    </div>
</div>